<div class="m-4">
    <div class="mb-4">
        <% if logged_in? %>
            <p>ユーザー名：<%= current_user.name %>さん</p>
            <%= link_to 'ログアウト', logout_path, method: :delete %>
        <% else %>
            <%= link_to 'ログイン', login_path %>
        <% end %>
    </div>
    
    <h1>タスク一覧</h1>
    <div class="m-4">
        <ul>
        <% @tasks.each do |task|  %>
            <li><%= link_to task.id ,task_path(task.id) %>:<%= task.content %>&gt;<%= task.status %></li>
        <% end %>
        </ul>
    </div>
    <div>
        <%= link_to '新規タスクの登録', new_task_path, class: "btn btn-primary" %>
    </div>
</div>